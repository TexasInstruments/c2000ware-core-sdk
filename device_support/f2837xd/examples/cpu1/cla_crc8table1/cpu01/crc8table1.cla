void gentable(void)
{
  int16_t i,j;
  int16_t x;
  for( i = 0;  i < 256;  i++ )
  {
    x =  i;
    for( j = 0;  j < 8;  j++ )
    {
      if ( x & 0x80L )
      {
        x = ( (x << 1) & 0xff ) ^ POLYNOMIAL8;
      }
      else
      {
        x = ( x << 1 ) & 0xff;
      }
    }
    table[i] = x;
  }
}

